<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_comment_user_picture"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_comment_user_name"
        style="@style/customTextView"
        android:text="Name"
        android:layout_toRightOf="@+id/iv_comment_user_picture"
        android:layout_toEndOf="@+id/iv_comment_user_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_comment_content"
        style="@style/detailTextView"
        android:text="blÃ¡"
        android:layout_toRightOf="@+id/iv_comment_user_picture"
        android:layout_toEndOf="@+id/iv_comment_user_picture"
        android:layout_below="@+id/tv_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_comment_date_time"
        android:text="dd/MM/YY hh:mm:ss"
        style="@style/detailTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>